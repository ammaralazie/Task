<%-include('../layout/header.ejs',{title:'profile'})%>
<div class="container d-flex justify-content-center mt-5" style="display: flex;width: 100%;height: 90vh;align-items: center;justify-content: center;">
    <div class="card">
        <div class="top-container"> 
            
            <%if(profile.img_url){%>
                <img src="<%='/media/img/'+profile.img_url%>" class="img-fluid profile-image" width="70">
                <%}else{%>
                    <img src=<%='/media/img/default.jpg'%> class="img-fluid profile-image" width="70">
                <%}%>
            <div class="ml-3" style="margin-left: 4px">
                <h5 class="name"><%=profile.first_name%>&ThinSpace;<%=profile.last_name%></h5>
            </div>
        </div>
        <div class="recent-border mt-4"style="margin-top:4px"> <span class="recent-orders"><%=profile.pio%></span> </div>
        <div class="wishlist-border pt-2"style="margin: 10px 0px"> <span class="wishlist">created at: <%=profile.date%></span> </div>
        <%if(locals.user){%>
        <a href="<%- '/edit/'+profile.id%>" class="fashion-studio-border pt-2"
        style="text-decoration: none;background-color:rgb(226, 43, 52);border-radius: 4px;color:blueviolet;padding: 5px;margin: 9px;"> 
        <span class="fashion-studio">edit</span>
        </a>
        <%}%>
    </div>
</div>
<%-include('../layout/footer.ejs')%>